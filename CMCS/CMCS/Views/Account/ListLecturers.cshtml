<style>
    body {
        background-color: white; 
        color: black;
    }

    table {
        width: 100%; 
        margin-top: 20px; 
        border-collapse: collapse; 
        background-color: white;
    }

    th, td {
        padding: 12px; 
        border: 1px solid #ddd; 
        text-align: left; 
    }

    th {
        background-color: #f2f2f2; 
    }

    td .btn {
        margin-right: 10px; 
    }

</style>

<h1 style="color:white">Registered Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Email</th>
            <th>Actions</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Surname</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <!-- Edit and Delete buttons -->
                    <a asp-controller="Account" asp-action="EditLecturer" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                    <a asp-controller="Account" asp-action="DeleteLecturer" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
